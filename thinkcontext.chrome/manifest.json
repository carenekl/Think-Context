{
    "name": "Think Context",
    "version": "0.97",
    "description": "Inserts contextual, politically progressive information into your web browsing",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "options_page": "options.html",
    "web_accessible_resources": ["icons/tc-128.png"
				],	    
    "icons": {
	"128": "icons/tc-128.png"
    },
    "page_action": { "default_title": "thinkContext" },
    "permissions": ["*://www.google.com/*"
    		    ,"http://*.thinkcontext.org/*"
		    ,"*://yahoo.com/*"
		    ,"*://goodsearch.com/*"
		    ,"tabs"
        	   ],
    "background": {"scripts": ["jquery-2.0.3.min.js","bg-utils.js","db.js","background.js"]},
    "content_scripts": [
	{
	    "css": ["jquery-ui.css"],
	    "matches": ["*://www.google.com/*"],
	    "js": ["jquery-2.0.3.min.js","jquery-ui-1.9.2.custom.min.js","ejs_production.js","utils.js","bg-utils.js","google-search.js"]
	}
	, {
	    "css": ["jquery-ui.css"],
	    "matches": ["http://*.twitter.com/*", "https://*.twitter.com/*"],
	    "js": ["jquery-2.0.3.min.js","jquery-ui-1.9.2.custom.min.js","ejs_production.js","bg-utils.js","utils.js","twitter.js"]
	}
	, {
	    "css": ["jquery-ui.css"],
	    "matches": ["http://*.facebook.com/*", "https://*.facebook.com/*"],
	    "js": ["jquery-2.0.3.min.js","jquery-ui-1.9.2.custom.min.js","ejs_production.js","bg-utils.js","utils.js","facebook.js"]
	}

	,{  "matches": ["*://plus.google.com/*"],
	    "css": ["jquery-ui.css"],
	    "js": ["jquery-2.0.3.min.js","jquery-ui-1.9.2.custom.min.js","utils.js","google-place-page.js"]
	 }
	,{
	    "css": ["jquery-ui.css"],
	    "matches": ["*://www.bing.com/search*"],
	    "js": ["jquery-2.0.3.min.js","jquery-ui-1.9.2.custom.min.js","ejs_production.js","utils.js","bing-search.js"]
	}
	,{
	    "all_frames": true,
	    "css": ["jquery-ui.css"],
	    "matches": ["http://*.search.yahoo.com/*","https://*.search.yahoo.com/*","*://goodsearch.com/*"],
	    "js": ["jquery-2.0.3.min.js","jquery-ui-1.9.2.custom.min.js","ejs_production.js","utils.js","yahoo-search.js"]
	}
	,{
	    "css": ["jquery-ui.css"],
	    "matches": ["*://*/*"],
	    "exclude_globs": ["*://mail.google.com/*"
			      ,"*://www.google.com/*"
			      ,"*://www.bing.com/search*"
			      ,"*://www.bing.com/"
			      ,"*://twitter.com/*"
			      ,"*://facebook.com/*"
			      ,"*://www.facebook.com/*"
			      ,"http://*.yahoo.com/*"
			      ,"https://*.yahoo.com/*"
			     ] ,
	    "js": ["jquery-2.0.3.min.js","jquery-ui-1.9.2.custom.min.js","ejs_production.js","utils.js","bg-utils.js","reverse.js"]
	}
	,{
	    "all_frames": true,
	    "css": ["jquery-ui.css"],
	    "matches": ["http://*.adsonar.com/*"
			,"http://*.msn.com/*"
			,"http://*.doubleclick.net/pagead/*"
			,"http://*.overture.com/*"
			,"http://ad.doubleclick.net/adi/*"
		       ],
	    "js": ["jquery-2.0.3.min.js","jquery-ui-1.9.2.custom.min.js","ejs_production.js","utils.js","bg-utils.js","iframe.js"]
	}
    ]
}
